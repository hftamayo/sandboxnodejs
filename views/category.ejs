<%- include('includes/head.ejs') %>
  </head>
  <body>
    <%- include('includes/navigation.ejs') %>
    <main>
      <h1>Product Categories</h1>
      <% if (cats.length > 0) { %>
      <p>List of all categories...</p>
      <div class="grid">
        <% for (let category of cats) { %>
            <article class="card.product-item">
            <header class="card__header">
                <h1 class="product__title"><%= category.catname %></h1>
            </header>
            <div class="card__image">
                <img src="/img/malo.png" alt="A category" />
            </div>
            <div class="card__content">
                <h2 class="product__price">data sin params01</h2>
                <p class="product__description">data sin params02</p>
            </div>
            <div class="card__actions">
                <button class="btn">Click me category</button>
            </div>
            </article>
        <% } %>
      </div>
      <% } else { %>
      <p>No category found</p>
      <% } %>
    </main>
<%- include('includes/end.ejs') %>